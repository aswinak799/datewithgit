{
  "manifest_version": 3,
  "name": "Odoo Tools: Domain Tester + View/XPath Inspector",
  "description": "Build/test domains and inspect Odoo views with inheritance chain and XPath helpers.",
  "version": "0.2.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js", "content_view_xpath.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}